<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateBannerActivity">

    <LinearLayout
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loaerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/josefinsans"
            android:gravity="center"
            android:text="Loading.."
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="italic" />

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="start">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/josefinsans"
            android:text="Create Item"
            android:textColor="#FFF"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:padding="15dp">

        <ImageView
            android:id="@+id/ic_shop"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_shop" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_shop"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/josefinsans"
            android:text="Click On The Banner To Pick A New Banner" />





        <Button
            android:id="@+id/saveItem"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemName"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_btn"
            android:fontFamily="@font/josefinsans"
            android:text="UPLOAD"
            android:textColor="#FFF" />
    </RelativeLayout>


</RelativeLayout>